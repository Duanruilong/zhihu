
<include src="../tpls/tpls.wxml"/>
<scroll-view scroll-y="true" class="index">
<swiper clas="banner" indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class="banner">
  <block wx:for="{{bannerData}}">
    <swiper-item style="position: absolute; width: 100%; height: 100%; top: 0px; left: 0%;">
      <image src="{{item.image}}" class="slide-img" mode="aspectFill" />
      <text clas="sw-text">{{item.title}}</text>
    </swiper-item>
  </block>
</swiper>
<import src="../tpls/item.wxml" />
  <view class="list">
       <text>今日热闻</text>
       <block wx:for="{{list}}">
          <template is="item" data="{{item}}"/>
       </block>  
  </view>

</scroll-view>
